<%- include ('../_layouts/adminheader') -%>

<h2 class="page-title">Products</h2>
<a href="/admin/products/add-product" class="btn btn-primary">Add new product</a>

<br><br>
<% if (products && count > 0) {%>
<table class="table table-striped align-middle">
    <thead>
        <tr class="home">
            <th>Product</th>
            <th>Price</th>
            <th>Category</th>
            <th>Product Image</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>

        <% products.forEach(product => {%>
        <tr>
            <td><%= product.title %></td>
            <td><%= parseFloat(product.price).toFixed(2) %></td>
            <td><%= product.category %></td>

            <td>
                <% if (product.image == "") { %>
                <img src="/images/noImage.png" alt="No Image">
                <%} else {%>
                <img id="no_image" src="/product_images/<%= product._id %>/<%= product.image %> " alt="<%= product.image %>">
                <%} %>
            </td>

            <td><a href="/admin/products/edit-product/<%= product._id %>"><i class="fa fa-edit" style="font-size:24px;"></a></td>
            <td><a class="delete-confirm" href="/admin/products/delete-product/<%= product.id %>"><i class="fa fa-trash" style="font-size:24px;"></a></td>
        </tr>

        <% })%>

    </tbody>
</table>
<% } else {%>
<h3 class="text-center">There are no products</h3>
<% }%>

<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
