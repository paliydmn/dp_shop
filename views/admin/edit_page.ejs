<%- include ('../_layouts/adminheader') -%>
<h1>Add!</h1>

<h2 class="page-title">Edit Page</h2>
<a href="/admin/pages" class="btn btn-secondary"> Back to All pages</a>

<form action="/admin/pages/edit-page/<%= id %> " method="post">
    <div class="from-group">
        <label for="">Title</label>
        <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title">
    </div>
    <div class="from-group">
        <label for="">Slug</label>
        <input type="text" class="form-control" name="slug" value="<%= slug %>" placeholder="Slug">
    </div>
    <div class="from-group">
        <label for="">Content</label>
        <textarea class="form-control"  id="ta"name="content" placeholder="content"><%= content %></textarea>
    </div>

    <button class="btn btn-primary">Submit</button>
</form>

<%- include ('../_layouts/adminfooter') -%>