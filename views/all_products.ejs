<%- include ('_layouts/header') -%>

<div class="row products">
    <span class="glyphicon glyphicon-shopping-cart"></span>
    <% products.forEach(function(p){ %>
    <div class="col-xs-12 col-md-4 p">
        <a class="pa" href="/products/<%= p.category %>/<%= p.slug %>">
            <img class="pimage" src="/product_images/<%= p.id %>/<%= p.image %>" alt="">
        </a>
        <h3><%= p.title %></h3>
        <h4>$<%= parseFloat(p.price).toFixed(2) %></h4>
        <div class="container">
            <div class="row">
                <div class="col-xs-4" style="padding: 5px;">
                    <a class="vd prod-details" href="/products/<%= p.category %>/<%= p.slug %>">Details</a>
                </div>
                <div class="col-xs-4 " style="padding: 5px;">
                    <p><a href="/cart/add/<%= p.slug %>">
                            <button class="btn-buy">
                                <i class="fa fa-shopping-basket" aria-hidden="true"></i> Buy</button>
                            <!-- <i class="fa fa-shopping-cart" style="font-size:24px"></i> -->
                        </a></p>
                </div>
            </div>
        </div>
    </div>
    <% }); %>

</div>

<%- include ('_layouts/footer') -%>